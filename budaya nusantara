        }
        select {
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
            border: 1px solid #aaa;
        }
        .card {
            background: #fafafa;
            padding: 20px;
            border-left: 5px solid #ff5722;
            border-radius: 5px;
        }
        .title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }
    </style>
