  <style>
    :root{
      --bg:#fffaf4; --card:#fff4e8; --accent:#f08a24; --text:#111;
      --muted:#6b6b6b; font-family:Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }
    body{margin:0;background:var(--bg);color:var(--text);min-height:100vh;display:flex;align-items:center;justify-content:center;padding:28px;}
    .wrap{width:100%;max-width:1100px;background:transparent;border-radius:12px;display:grid;grid-template-columns:1fr 360px;gap:20px;align-items:start}
    header{grid-column:1/-1;text-align:center;padding-bottom:8px}
    h1{margin:0;font-size:36px;letter-spacing:-0.5px}
    /* left: map + card */
    .left{background:transparent;padding:14px;border-radius:12px}
    .map{
      width:100%;height:420px;border-radius:12px;background:linear-gradient(180deg,#fff 0%, #fffaf0 100%);display:flex;align-items:center;justify-content:center;box-shadow:0 6px 18px rgba(10,10,10,0.06);
      position:relative;overflow:hidden;
    }
    /* placeholder "peta" */
    .map svg{width:92%;height:auto;max-height:360px;opacity:0.95}
    .card{
      margin-top:14px;background:var(--card);padding:18px;border-radius:12px;box-shadow:0 4px 14px rgba(10,10,10,0.04);
    }
    .card h2{margin:0 0 6px 0;font-size:20px}
    .card p{margin:0;color:var(--muted);line-height:1.5}
    .meta{margin-top:10px;font-size:13px;color:var(--muted)}
    /* right: list */
    .right{padding:8px 12px;border-radius:12px}
    .region-list{display:flex;flex-direction:column;gap:10px}
    .region-btn{
      background:#fff;border-radius:10px;padding:14px 12px;border:1px solid rgba(0,0,0,0.04);cursor:pointer;text-align:left;font-weight:600;box-shadow:0 3px 8px rgba(10,10,10,0.03)
    }
    .region-btn.active{outline:3px solid rgba(240,138,36,0.12);border-color:var(--accent)}
    .small{font-size:13px;color:var(--muted);font-weight:500;margin-top:8px}
