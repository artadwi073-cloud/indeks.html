<body>
  <div class="wrap">
    <header><h1>Budaya Nusantara Interaktif — Demo</h1></header>

    <div class="left">
      <div class="map" id="map">
        <!-- Simple illustrative SVG of Indonesia silhouette (abstract shapes) -->
        <svg viewBox="0 0 1200 400" preserveAspectRatio="xMidYMid meet" xmlns="http://www.w3.org/2000/svg">
          <g transform="translate(0,10)" fill="#F08A24">
            <!-- very abstract islands to suggest Indonesia shape (for demo) -->
            <rect x="30" y="70" rx="20" ry="20" width="160" height="70"></rect>
            <rect x="230" y="95" rx="12" ry="12" width="240" height="50"></rect>
            <rect x="520" y="120" rx="10" ry="10" width="340" height="40"></rect>
            <rect x="900" y="150" rx="14" ry="14" width="140" height="36"></rect>
            <circle cx="770" cy="70" r="34"></circle>
            <rect x="420" y="40" rx="8" ry="8" width="90" height="26"></rect>
          </g>
        </svg>
        <!-- Overlay label when no selection -->
        <div id="mapHint" style="position:absolute;left:18px;bottom:14px;background:rgba(255,255,255,0.9);padding:8px 12px;border-radius:8px;font-weight:700;color:var(--muted)">Klik provinsi di kanan untuk lihat budaya</div>
      </div>

      <div class="card" id="infoCard">
        <h2 id="title">Pilih provinsi / wilayah</h2>
        <p id="desc">Contoh: klik "Bali" atau "Jawa" di sebelah kanan untuk lihat budaya khasnya. Ini versi demo ringan yang bisa kamu kembangkan (tambahkan foto, audio, video).</p>
        <div class="meta" id="meta">Sumber: data demo</div>
      </div>
    </div>

    <aside class="right">
      <div style="display:flex;align-items:center;justify-content:space-between;margin-bottom:10px">
        <strong style="font-size:16px">Daftar Wilayah</strong>
        <span class="small">Demo interaktif</span>
      </div>

      <div class="region-list" id="regionList">
        <!-- Buttons generated by JS -->
      </div>

      <div style="margin-top:12px;color:var(--muted);font-size:13px">
        Tips: bisa ditambah kuis, audio musik tradisional, atau link sumber.
      </div>
    </aside>

    <footer class="note">Dibuat oleh: <strong>Robi</strong> — versi demo. Kembangkan untuk lomba: tambah peta SVG provinsi, gambar, & kuis!</footer>
  </div>

  <script>
    // Data demo: tiap objek minimal berisi id, label, title (budaya), deskripsi, wilayah
    const DATA = [
      { id: 'bali', region: 'Bali', title: 'Tari Kecak', desc: 'Tari Kecak adalah tarian khas Bali yang ditandai nyanyian “cak-cak” beramai-ramai. Biasanya ditampilkan saat upacara atau pertunjukan seni budaya.', meta: 'Asal: Bali' },
      { id: 'jatim', region: 'Jawa Timur', title: 'Besutan (Jombang)', desc: 'Besutan adalah tradisi khas Jombang yang berupa tarian atau pentas rakyat, seringkali punya unsur humor dan cerita lokal.', meta: 'Asal: Jombang, Jawa Timur' },
      { id: 'aceh', region: 'Aceh', title: 'Tari Saman', desc: 'Tari Saman adalah tarian tradisional dari Aceh, ciri khasnya formasi rapat dan tepukan tangan ritmis yang cepat.', meta: 'Asal: Aceh' },
      { id: 'papua', region: 'Papua', title: 'Tari Yospan', desc: 'Tari Yospan (Yosim Pancar) berasal dari Papua; energik dan sering dipertunjukkan di perayaan adat.', meta: 'Asal: Papua' },
      { id: 'sumut', region: 'Sumatra Utara', title: 'Randai', desc: 'Randai adalah seni pertunjukan dari Minangkabau (Sumatera Barat) yang memadukan musik, tari, dan drama tradisional.', meta: 'Asal: Sumatera Barat' }
    ];

    // render region buttons
    const regionList = document.getElementById('regionList');
    DATA.forEach((d, idx) => {
      const btn = document.createElement('button');
      btn.className = 'region-btn';
      btn.dataset.id = d.id;
      btn.innerHTML = <div style="font-size:15px">${d.region}</div><div style="font-size:13px;color:var(--muted);margin-top:6px">${d.title}</div>;
      btn.addEventListener('click', () => selectRegion(d.id));
      regionList.appendChild(btn);
    });

    // select region by id
    function selectRegion(id){
      const item = DATA.find(x => x.id === id);
      if(!item) return;
      // update card
      document.getElementById('title').textContent = item.title + ' — ' + item.region;
      document.getElementById('desc').textContent = item.desc;
      document.getElementById('meta').textContent = item.meta;

      // highlight active button
      document.querySelectorAll('.region-btn').forEach(b => b.classList.toggle('active', b.dataset.id === id));

      // optional: animate map hint out
      const hint = document.getElementById('mapHint');
      if(hint) hint.style.display = 'none';

      // optional: show a small visual on the map by injecting a dot
      showMapDot(id);
    }

    // map dot demo (lightweight)
    function showMapDot(id){
      // quick mapping of id -> coords inside the svg viewBox (x,y)
      const coords = {
        bali: {x:760, y:200},
        jatim: {x:700, y:210},
        aceh: {x:90, y:120},
        papua: {x:990, y:170},
        sumut: {x:160, y:120}
      };
      // remove previous dot
      const old = document.getElementById('dot-highlight');
      if(old) old.remove();

      const map = document.querySelector('.map svg');
      if(!map) return;
      const c = coords[id];
      if(!c) return;
      // create a circle overlay using absolute positioning
      const dot = document.createElement('div');
      dot.id = 'dot-highlight';
      dot.style.position = 'absolute';
      dot.style.width = '18px';
      dot.style.height = '18px';
      dot.style.borderRadius = '50%';
      dot.style.background = 'rgba(240,138,36,0.95)';
      dot.style.boxShadow = '0 6px 14px rgba(240,138,36,0.25)';
      // convert svg coords to percentage based on the viewBox used above
      // (svg viewBox is 0 0 1200 400)
      const px = (c.x / 1200) * document.querySelector('.map').clientWidth;
      const py = (c.y / 400) * document.querySelector('.map').clientHeight;
      dot.style.left = (px - 9) + 'px';
      dot.style.top = (py - 9) + 'px';
      document.querySelector('.map').appendChild(dot);
    }

    // optional: allow selecting via URL hash like #bali
    function checkHash(){
      const id = location.hash.slice(1);
      if(id) selectRegion(id);
    }
    window.addEventListener('hashchange', checkHash);
    checkHash();

    // for demo, auto-select Bali on load (remove if not needed)
    setTimeout(()=> selectRegion('bali'), 300);
  </script>
</body>
</html>
